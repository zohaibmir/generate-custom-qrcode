# QR Service Environment Variables  
# Copy this to .env and update values for your environment

# ==============================================
# DATABASE CONFIGURATION - OPTIMIZED  
# ==============================================
DATABASE_URL=postgresql://qr_user:qr_password@localhost:5432/qr_saas
DB_HOST=localhost
DB_PORT=5432
DB_NAME=qr_saas
DB_USER=qr_user
DB_PASSWORD=qr_password

# ðŸš€ OPTIMIZED CONNECTION POOL SETTINGS (Nov 2025)
# High write load for QR code operations
DB_POOL_MAX=40
DB_POOL_MIN=8
DB_IDLE_TIMEOUT=45000
DB_CONNECTION_TIMEOUT=12000
DB_STATEMENT_TIMEOUT=20000
DB_QUERY_TIMEOUT=15000

# ==============================================
# SERVER CONFIGURATION
# ==============================================
PORT=3002
NODE_ENV=development
SERVICE_NAME=qr-service

# ==============================================
# QR CODE CONFIGURATION
# ==============================================
QR_DEFAULT_SIZE=300
QR_MAX_SIZE=2000
QR_MIN_SIZE=100
QR_DEFAULT_FORMAT=png
QR_SUPPORTED_FORMATS=png,svg,pdf,jpg

# ==============================================
# FILE STORAGE CONFIGURATION
# ==============================================
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_MIME_TYPES=image/jpeg,image/png,image/gif,image/webp,image/svg+xml

# ==============================================
# REDIS CONFIGURATION
# ==============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_TTL=3600

# ==============================================
# CORS CONFIGURATION
# ==============================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3013

# ==============================================
# SECURITY CONFIGURATION
# ==============================================
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=200
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# ==============================================
# BULK OPERATIONS
# ==============================================
BULK_QR_MAX_BATCH_SIZE=1000
BULK_QR_TIMEOUT=300000  # 5 minutes
BULK_PROCESSING_INTERVAL=1000  # 1 second

# ==============================================
# LOGGING CONFIGURATION
# ==============================================
LOG_LEVEL=info
LOG_FORMAT=combined
ENABLE_CONSOLE_LOGS=true
ENABLE_FILE_LOGS=false
LOG_FILE_PATH=./logs/qr-service.log