# Team Service Environment Variables
# Copy this to .env and update values for your environment

# ==============================================
# DATABASE CONFIGURATION - OPTIMIZED
# ==============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=qr_saas
DB_USER=qr_user
DB_PASSWORD=qr_password
DB_SSL=false

# ðŸš€ OPTIMIZED CONNECTION POOL SETTINGS (Nov 2025)
DB_POOL_MAX=25
DB_POOL_MIN=3
DB_IDLE_TIMEOUT=45000
DB_CONNECTION_TIMEOUT=12000
DB_STATEMENT_TIMEOUT=20000
DB_QUERY_TIMEOUT=15000

# ==============================================
# SERVER CONFIGURATION
# ==============================================
NODE_ENV=development
PORT=3006
SERVICE_NAME=team-service

# ==============================================
# REDIS CONFIGURATION
# ==============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_TTL=3600

# ==============================================
# JWT CONFIGURATION
# ==============================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# ==============================================
# EXTERNAL SERVICES
# ==============================================
USER_SERVICE_URL=http://localhost:3001
NOTIFICATION_SERVICE_URL=http://localhost:3005
QR_SERVICE_URL=http://localhost:3002
ANALYTICS_SERVICE_URL=http://localhost:3003

# ==============================================
# SECURITY SETTINGS
# ==============================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3010
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==============================================
# BUSINESS RULES
# ==============================================
MAX_ORGANIZATIONS_PER_USER=5
MAX_MEMBERS_PER_ORGANIZATION=50
INVITATION_EXPIRY_DAYS=7
DEFAULT_MEMBER_ROLE=viewer

# ==============================================
# LOGGING
# ==============================================
LOG_LEVEL=debug
LOG_FORMAT=combined

# ==============================================
# FRONTEND URL
# ==============================================
FRONTEND_URL=http://localhost:3000