# E-commerce Service Environment Variables
# Copy this to .env and update values for your environment

# ==============================================
# DATABASE CONFIGURATION - OPTIMIZED
# ==============================================
DATABASE_URL=postgresql://qr_user:qr_password@localhost:5432/qr_saas
DB_HOST=localhost
DB_PORT=5432
DB_NAME=qr_saas
DB_USER=qr_user
DB_PASSWORD=qr_password

# ðŸš€ OPTIMIZED CONNECTION POOL SETTINGS (Nov 2025)
# Standard load e-commerce operations
DB_POOL_MAX=25
DB_POOL_MIN=3
DB_IDLE_TIMEOUT=45000
DB_CONNECTION_TIMEOUT=12000
DB_STATEMENT_TIMEOUT=20000
DB_QUERY_TIMEOUT=15000

# ==============================================
# SERVER CONFIGURATION
# ==============================================
PORT=3011
NODE_ENV=development
SERVICE_NAME=ecommerce-service

# ==============================================
# PAYMENT CONFIGURATION
# ==============================================
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_ENVIRONMENT=sandbox  # sandbox or live

# ==============================================
# REDIS CONFIGURATION
# ==============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_TTL=3600

# ==============================================
# CORS CONFIGURATION
# ==============================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ==============================================
# SECURITY CONFIGURATION
# ==============================================
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# ==============================================
# E-COMMERCE SETTINGS
# ==============================================
DEFAULT_CURRENCY=USD
TAX_RATE=0.08  # 8%
SHIPPING_RATE=5.00
FREE_SHIPPING_THRESHOLD=50.00

# ==============================================
# INVENTORY SETTINGS
# ==============================================
LOW_STOCK_THRESHOLD=10
ENABLE_INVENTORY_TRACKING=true
AUTO_RESTOCK_ENABLED=false

# ==============================================
# LOGGING CONFIGURATION
# ==============================================
LOG_LEVEL=info
LOG_FORMAT=combined
ENABLE_CONSOLE_LOGS=true
ENABLE_FILE_LOGS=false
LOG_FILE_PATH=./logs/ecommerce-service.log