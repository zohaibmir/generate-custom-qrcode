# API Gateway Environment Variables
# Copy this to .env and update values for your environment

# ==============================================
# DATABASE CONFIGURATION - OPTIMIZED
# ==============================================
DATABASE_URL=postgresql://qr_user:qr_password@localhost:5432/qr_saas
DB_HOST=localhost
DB_PORT=5432
DB_NAME=qr_saas
DB_USER=qr_user
DB_PASSWORD=qr_password

# ðŸš€ OPTIMIZED CONNECTION POOL SETTINGS (Nov 2025)
# Standard load gateway operations
DB_POOL_MAX=25
DB_POOL_MIN=3
DB_IDLE_TIMEOUT=45000
DB_CONNECTION_TIMEOUT=12000
DB_STATEMENT_TIMEOUT=20000
DB_QUERY_TIMEOUT=15000

# ==============================================
# SERVER CONFIGURATION
# ==============================================
PORT=3000
NODE_ENV=development
SERVICE_NAME=api-gateway

# ==============================================
# SERVICE URLS
# ==============================================
USER_SERVICE_URL=http://localhost:3001
QR_SERVICE_URL=http://localhost:3002
ANALYTICS_SERVICE_URL=http://localhost:3003
FILE_SERVICE_URL=http://localhost:3004
NOTIFICATION_SERVICE_URL=http://localhost:3005
TEAM_SERVICE_URL=http://localhost:3006
API_SERVICE_URL=http://localhost:3007
ECOMMERCE_SERVICE_URL=http://localhost:3011
CONTENT_SERVICE_URL=http://localhost:3012
ADMIN_DASHBOARD_SERVICE_URL=http://localhost:3013
BUSINESS_TOOLS_SERVICE_URL=http://localhost:3014
SSO_SERVICE_URL=http://localhost:3015
DATA_RETENTION_SERVICE_URL=http://localhost:3016
LANDING_PAGE_SERVICE_URL=http://localhost:3010

# ==============================================
# REDIS CONFIGURATION
# ==============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_TTL=3600

# ==============================================
# CORS CONFIGURATION
# ==============================================
CORS_ORIGINS=*

# ==============================================
# SECURITY CONFIGURATION
# ==============================================
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=1000
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# ==============================================
# PROXY SETTINGS
# ==============================================
PROXY_TIMEOUT=30000  # 30 seconds
MAX_BODY_SIZE=50mb
ENABLE_COMPRESSION=true

# ==============================================
# SWAGGER CONFIGURATION
# ==============================================
SWAGGER_ENABLED=true
SWAGGER_PATH=/api-docs

# ==============================================
# LOGGING CONFIGURATION
# ==============================================
LOG_LEVEL=info
LOG_FORMAT=combined
ENABLE_CONSOLE_LOGS=true
ENABLE_FILE_LOGS=false
LOG_FILE_PATH=./logs/api-gateway.log