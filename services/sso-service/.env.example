# SSO Service Environment Variables
# Copy this to .env and update values for your environment

# ==============================================
# DATABASE CONFIGURATION - OPTIMIZED
# ==============================================
DATABASE_URL=postgresql://qr_user:qr_password@localhost:5432/qr_saas
DB_HOST=localhost
DB_PORT=5432
DB_NAME=qr_saas
DB_USER=qr_user
DB_PASSWORD=qr_password
DB_SSL=false

# ðŸš€ OPTIMIZED CONNECTION POOL SETTINGS (Nov 2025)
DB_POOL_MAX=25
DB_POOL_MIN=3
DB_IDLE_TIMEOUT=45000
DB_CONNECTION_TIMEOUT=12000
DB_STATEMENT_TIMEOUT=20000
DB_QUERY_TIMEOUT=15000

# ==============================================
# SERVICE CONFIGURATION
# ==============================================
NODE_ENV=development
PORT=3015
SSO_SERVICE_PORT=3015

# ==============================================
# REDIS CONFIGURATION
# ==============================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ==============================================
# SECURITY CONFIGURATION
# ==============================================
JWT_SECRET=development-jwt-secret-key-change-in-production-at-least-32-characters
SESSION_SECRET=sso-session-secret-change-in-production-minimum-32-chars
SSO_ENCRYPTION_KEY=sso-encryption-key-32-chars-long-change-in-production

# ==============================================
# CORS CONFIGURATION
# ==============================================
CORS_ORIGIN=http://localhost:3000,http://localhost:8080,http://localhost:4200

# ==============================================
# BASE URL
# ==============================================
BASE_URL=http://localhost:3015

# ==============================================
# RATE LIMITING
# ==============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# ==============================================
# SAML CONFIGURATION
# ==============================================
SAML_CERT_PATH=/app/certs/saml.crt
SAML_KEY_PATH=/app/certs/saml.key
SAML_ISSUER=qr-saas-platform
SAML_CALLBACK_URL=http://localhost:3015/auth/saml/callback
SAML_SIGNATURE_ALGORITHM=sha256
SAML_DIGEST_ALGORITHM=sha256
SAML_IDENTIFIER_FORMAT=urn:oasis:names:tc:SAML:2.0:nameid-format:persistent

# ==============================================
# SESSION CONFIGURATION
# ==============================================
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTP_ONLY=true
SESSION_COOKIE_MAX_AGE=86400000
SESSION_COOKIE_SAME_SITE=lax
SESSION_RESAVE=false
SESSION_SAVE_UNINITIALIZED=false

# ==============================================
# LOGGING CONFIGURATION
# ==============================================
LOG_LEVEL=debug
LOG_FORMAT=combined
LOG_TO_FILE=true
LOG_FILE_PATH=./logs/sso-service.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5
AUDIT_LOG_ENABLED=true
AUDIT_LOG_LEVEL=info
AUDIT_LOG_RETENTION_DAYS=90

# ==============================================
# SECURITY HEADERS
# ==============================================
HELMET_ENABLED=true
CONTENT_SECURITY_POLICY=default-src 'self'
X_FRAME_OPTIONS=DENY
X_CONTENT_TYPE_OPTIONS=nosniff
X_XSS_PROTECTION=1; mode=block

# ==============================================
# HEALTH CHECK
# ==============================================
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_DB=true
HEALTH_CHECK_REDIS=true