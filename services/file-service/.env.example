# File Service Environment Variables
# Copy this to .env and update values for your environment

# ==============================================
# DATABASE CONFIGURATION - OPTIMIZED
# ==============================================
DATABASE_URL=postgresql://qr_user:qr_password@localhost:5432/qr_saas
DB_HOST=localhost
DB_PORT=5432
DB_NAME=qr_saas
DB_USER=qr_user
DB_PASSWORD=qr_password

# ðŸš€ OPTIMIZED CONNECTION POOL SETTINGS (Nov 2025)
# Standard load file operations
DB_POOL_MAX=25
DB_POOL_MIN=3
DB_IDLE_TIMEOUT=45000
DB_CONNECTION_TIMEOUT=12000
DB_STATEMENT_TIMEOUT=20000
DB_QUERY_TIMEOUT=15000

# ==============================================
# SERVER CONFIGURATION
# ==============================================
PORT=3004
NODE_ENV=development
SERVICE_NAME=file-service

# ==============================================
# FILE UPLOAD CONFIGURATION
# ==============================================
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_MIME_TYPES=image/jpeg,image/png,image/gif,image/webp,image/svg+xml,application/pdf
STORAGE_PROVIDER=local  # local, s3, azure, gcp

# ==============================================
# AWS S3 CONFIGURATION (if using S3)
# ==============================================
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=qr-files-bucket

# ==============================================
# CORS CONFIGURATION
# ==============================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3013

# ==============================================
# SECURITY CONFIGURATION
# ==============================================
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=200
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# ==============================================
# IMAGE PROCESSING
# ==============================================
IMAGE_QUALITY=85
THUMBNAIL_SIZES=150x150,300x300,600x600
MAX_IMAGE_WIDTH=2000
MAX_IMAGE_HEIGHT=2000

# ==============================================
# LOGGING CONFIGURATION
# ==============================================
LOG_LEVEL=info
LOG_FORMAT=combined
ENABLE_CONSOLE_LOGS=true
ENABLE_FILE_LOGS=false
LOG_FILE_PATH=./logs/file-service.log