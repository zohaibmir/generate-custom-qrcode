# API Service Environment Variables
# Copy this to .env and update values for your environment

# ==============================================
# DATABASE CONFIGURATION - OPTIMIZED
# ==============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=qr_saas
DB_USER=qr_user
DB_PASSWORD=qr_password

# ðŸš€ OPTIMIZED CONNECTION POOL SETTINGS (Nov 2025)
DB_POOL_MAX=25
DB_POOL_MIN=3
DB_IDLE_TIMEOUT=45000
DB_CONNECTION_TIMEOUT=12000
DB_STATEMENT_TIMEOUT=20000
DB_QUERY_TIMEOUT=15000

# ==============================================
# SERVER CONFIGURATION
# ==============================================
PORT=3007
NODE_ENV=development
SERVICE_NAME=api-service

# ==============================================
# JWT CONFIGURATION
# ==============================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# ==============================================
# CORS CONFIGURATION
# ==============================================
CORS_ORIGIN=*

# ==============================================
# RATE LIMITING
# ==============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==============================================
# FILE STORAGE (for SDK generation)
# ==============================================
UPLOAD_DIR=./uploads
SDK_STORAGE_DIR=./sdk-generation
MAX_FILE_SIZE=50000000

# ==============================================
# OPENAPI GENERATOR
# ==============================================
OPENAPI_GENERATOR_VERSION=6.6.0

# ==============================================
# CLEANUP CONFIGURATION
# ==============================================
SDK_CLEANUP_INTERVAL_HOURS=1
SDK_EXPIRY_HOURS=24

# ==============================================
# DEVELOPMENT CONFIGURATION
# ==============================================
LOG_LEVEL=debug
ENABLE_SWAGGER_UI=true

# ==============================================
# REDIS CONFIGURATION
# ==============================================
REDIS_URL=redis://localhost:6379

# ==============================================
# EMAIL CONFIGURATION
# ==============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# ==============================================
# WEBHOOK CONFIGURATION
# ==============================================
WEBHOOK_SECRET_KEY=your-webhook-secret-key
WEBHOOK_MAX_RETRIES=3
WEBHOOK_RETRY_DELAY=1000