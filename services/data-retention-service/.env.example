# Data Retention Service Environment Variables
# Copy this to .env and update values for your environment

# ==============================================
# DATABASE CONFIGURATION - OPTIMIZED
# ==============================================
DATABASE_URL=postgresql://qr_user:qr_password@localhost:5432/qr_saas
DB_HOST=localhost
DB_PORT=5432
DB_NAME=qr_saas
DB_USER=qr_user
DB_PASSWORD=qr_password
DB_SSL=false

# ðŸš€ OPTIMIZED CONNECTION POOL SETTINGS (Nov 2025)
DB_POOL_MAX=25
DB_POOL_MIN=3
DB_IDLE_TIMEOUT=45000
DB_CONNECTION_TIMEOUT=12000
DB_STATEMENT_TIMEOUT=25000
DB_QUERY_TIMEOUT=20000

# ==============================================
# SERVICE CONFIGURATION
# ==============================================
NODE_ENV=development
PORT=3016
DATA_RETENTION_SERVICE_PORT=3016

# ==============================================
# REDIS CONFIGURATION
# ==============================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ==============================================
# SECURITY CONFIGURATION
# ==============================================
JWT_SECRET=development-jwt-secret-key-change-in-production-at-least-32-characters

# ==============================================
# CORS CONFIGURATION
# ==============================================
CORS_ORIGIN=http://localhost:3000,http://localhost:8080,http://localhost:4200

# ==============================================
# BASE URL
# ==============================================
BASE_URL=http://localhost:3016

# ==============================================
# RATE LIMITING
# ==============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# ==============================================
# DATA RETENTION CONFIGURATION
# ==============================================
DEFAULT_RETENTION_DAYS=365
QR_CODE_RETENTION_DAYS=1095
ANALYTICS_RETENTION_DAYS=730
LOG_RETENTION_DAYS=90
INACTIVE_USER_RETENTION_DAYS=1095
DELETED_USER_PURGE_DAYS=30
FILE_RETENTION_DAYS=730
NOTIFICATION_RETENTION_DAYS=180

# ==============================================
# CLEANUP SCHEDULE CONFIGURATION
# ==============================================
CLEANUP_ENABLED=true
CLEANUP_INTERVAL=daily
CLEANUP_HOUR=2
CLEANUP_BATCH_SIZE=1000
CLEANUP_MAX_PARALLEL=3
CLEANUP_TIMEOUT=300000

# ==============================================
# ARCHIVE CONFIGURATION
# ==============================================
ARCHIVE_ENABLED=true
ARCHIVE_THRESHOLD_DAYS=180
ARCHIVE_BATCH_SIZE=500
ARCHIVE_COMPRESSION=true
ARCHIVE_ENCRYPTION=true
ARCHIVE_STORAGE_PATH=/app/archives

# ==============================================
# MONITORING CONFIGURATION
# ==============================================
MONITORING_ENABLED=true
MONITORING_INTERVAL=3600000
MONITORING_ALERT_THRESHOLD=90
MONITORING_REPORT_RECIPIENTS=admin@qrsaas.com

# ==============================================
# LOGGING CONFIGURATION
# ==============================================
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_TO_FILE=true
LOG_FILE_PATH=./logs/data-retention-service.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5
AUDIT_LOG_ENABLED=true
AUDIT_LOG_LEVEL=info
AUDIT_LOG_RETENTION_DAYS=365

# ==============================================
# HEALTH CHECK
# ==============================================
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_DB=true
HEALTH_CHECK_REDIS=true
HEALTH_CHECK_CLEANUP_STATUS=true