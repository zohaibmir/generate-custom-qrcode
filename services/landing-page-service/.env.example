# Landing Page Service Environment Variables
# Copy this to .env and update values for your environment

# ==============================================
# DATABASE CONFIGURATION - OPTIMIZED
# ==============================================
DATABASE_URL=postgresql://qr_user:qr_password@localhost:5432/qr_saas
DB_HOST=localhost
DB_PORT=5432
DB_NAME=qr_saas
DB_USER=qr_user
DB_PASSWORD=qr_password

# ðŸš€ OPTIMIZED CONNECTION POOL SETTINGS (Nov 2025)
DB_POOL_MAX=25
DB_POOL_MIN=3
DB_IDLE_TIMEOUT=45000
DB_CONNECTION_TIMEOUT=12000
DB_STATEMENT_TIMEOUT=20000
DB_QUERY_TIMEOUT=15000

# ==============================================
# SERVER CONFIGURATION
# ==============================================
PORT=3010
NODE_ENV=development
SERVICE_NAME=landing-page-service

# ==============================================
# REDIS CONFIGURATION
# ==============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_TTL=3600

# ==============================================
# CORS CONFIGURATION
# ==============================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ==============================================
# SECURITY CONFIGURATION
# ==============================================
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=200
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# ==============================================
# LANDING PAGE SETTINGS
# ==============================================
DEFAULT_TEMPLATE=modern
MAX_PAGES_PER_USER=10
PAGE_CACHE_TTL=300  # 5 minutes
ENABLE_A_B_TESTING=true

# ==============================================
# FILE UPLOAD SETTINGS
# ==============================================
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880  # 5MB
ALLOWED_MIME_TYPES=image/jpeg,image/png,image/gif,image/webp

# ==============================================
# ANALYTICS INTEGRATION
# ==============================================
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
FACEBOOK_PIXEL_ID=your-facebook-pixel-id

# ==============================================
# LOGGING CONFIGURATION
# ==============================================
LOG_LEVEL=info
LOG_FORMAT=combined
ENABLE_CONSOLE_LOGS=true
ENABLE_FILE_LOGS=false
LOG_FILE_PATH=./logs/landing-page-service.log